<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>Spring-приложение, запускаемое в контейнере сервлетов</display-name>

    <servlet>
        <!-- Имя и класс основного сервлета приложения -->
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

        <!-- Настройка Spring-контекста и Java-конфигурации -->
        <init-param>
            <param-name>contextClass</param-name>
            <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
        </init-param>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>org.example.WebConfiguration</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>

        <!-- Добавленная часть: настройка multipart -->
        <multipart-config>
            <location>C:/temp/uploads</location> <!-- ← именно так, с прямым слэшем -->
            <max-file-size>10485760</max-file-size> <!-- 10MB -->
            <max-request-size>15728640</max-request-size> <!-- 15MB -->
            <file-size-threshold>0</file-size-threshold> <!-- сразу на диск -->
        </multipart-config>
    </servlet>

    <!-- DispatcherServlet обрабатывает все запросы -->
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

</web-app>